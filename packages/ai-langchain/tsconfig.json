{
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "types": [
      "@types/node",
      "vitest/globals"
    ],
    "lib": [
      "dom",
      "ES2018"
    ],
    "module": "ESNext",
    "target": "ES2018",
    "outDir": "./dist",
    "baseUrl": "."
  },
  "include": [
    "src/**/*"
  ],
  "types": [
    "@types/node"
  ],
  "exclude": [
    "node_modules"
  ]
}
